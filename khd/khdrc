khd kwm on

# Reload kwmc and khd configs
cmd + ctrl - r              :   /usr/local/bin/khd -e "reload"
cmd + ctrl + alt - r        :   /usr/local/bin/kwmc config relaod

# Set Space Tiling Mode To BSP
cmd + alt + ctrl - b        :   /usr/local/bin/kwmc space -t bsp

# Set Space Tiling Mode To Monocle
cmd + alt + ctrl - m        :   /usr/local/bin/kwmc space -t monocle

# Set Space Tiling Mode To Floating
cmd + alt + ctrl - f        :   /usr/local/bin/kwmc space -t float

# Move between focused windows
cmd + ctrl - right          :   /usr/local/bin/kwmc window -f east
cmd + ctrl - left           :   /usr/local/bin/kwmc window -f west
cmd + ctrl - up             :   /usr/local/bin/kwmc window -f north
cmd + ctrl - down           :   /usr/local/bin/kwmc window -f south

# Swap between spaces
cmd + alt - right           :   /usr/local/bin/kwmc window -m space right
cmd + alt - left            :   /usr/local/bin/kwmc window -m space left
cmd + alt - up              :   /usr/local/bin/kwmc window -m display 1 \
                                /usr/local/bin/kwmc display -f 1
cmd + alt - down            :   /usr/local/bin/kwmc window -m display 0 \
                                /usr/local/bin/kwmc display -f 0

# Change focus between displays
cmd - up                    :   /usr/local/bin/kwmc display -f 1
cmd - down                  :   /usr/local/bin/kwmc display -f 0

# Resize focused window to its container
cmd + alt + ctrl - l        :   /usr/local/bin/kwmc window -r focused
